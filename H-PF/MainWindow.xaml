<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H_PF"
        xmlns:NumberPicker="clr-namespace:H_PF.HesoControl.NumberPicker"  x:Class="H_PF.MainWindow"
        mc:Ignorable="d"
        Title="NP" Height="800" Width="800" Background="DarkGray">
    <Window.Resources>
        <Style TargetType="NumberPicker:NumberPicker">
            <Setter Property="ButtonForeground" Value="Red"/>
            <Setter Property="ButtonBackground" Value="Black"/>
            <Setter Property="CenterForeground" Value="Black"/>
            <Setter Property="CenterBackground" Value="Red"/>
        </Style>
    </Window.Resources>
    <Grid>
        <NumberPicker:NumberPicker Height="240" Width="120"/>
    </Grid>
</Window>
